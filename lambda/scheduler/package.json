{
  "name": "cost-scheduler-lambda",
  "version": "2.0.0",
  "description": "AWS resource scheduler for cost optimization - starts/stops EC2, RDS, ECS based on schedule configurations",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --target=bun --outfile=dist/index.js --minify --sourcemap=external",
    "build:lambda": "bun build src/index.ts --target=bun --outfile=dist/index.js --minify --sourcemap=external",
    "dev": "AWS_SDK_LOAD_CONFIG=1 bun run src/local-runner.ts",
    "dev:full": "AWS_SDK_LOAD_CONFIG=1 bun run src/local-runner.ts --mode=full",
    "dev:partial": "AWS_SDK_LOAD_CONFIG=1 bun run src/local-runner.ts --mode=partial --scheduleId=",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "bun --bun tsc --noEmit"
  },
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-auto-scaling": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/client-ec2": "^3.700.0",
    "@aws-sdk/client-ecs": "^3.700.0",
    "@aws-sdk/client-rds": "^3.700.0",
    "@aws-sdk/client-sns": "^3.700.0",
    "@aws-sdk/client-sts": "^3.700.0",
    "@aws-sdk/credential-provider-node": "^3.958.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "dayjs": "^1.11.13",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "dotenv": "^16.4.7",
    "typescript": "^5.7.2"
  }
}