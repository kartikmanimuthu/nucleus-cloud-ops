# AWS Configuration
AWS_REGION=us-east-1
NEXT_PUBLIC_AWS_REGION=us-east-1
HUB_ACCOUNT_ID=123456789012
NEXT_PUBLIC_HUB_ACCOUNT_ID=123456789012
AWS_USE_STS=true
NEXT_PUBLIC_AWS_USE_STS=true

# Authentication (Cognito)
COGNITO_REGION=us-east-1
NEXT_PUBLIC_COGNITO_REGION=us-east-1
COGNITO_USER_POOL_ID=us-east-1_example
NEXT_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_example
COGNITO_USER_POOL_CLIENT_ID=example_client_id
NEXT_PUBLIC_COGNITO_USER_POOL_CLIENT_ID=example_client_id
COGNITO_APP_CLIENT_ID=example_client_id
COGNITO_APP_CLIENT_SECRET=example_secret
COGNITO_CLIENT_SECRET=example_secret
COGNITO_IDENTITY_POOL_ID=us-east-1:example-identity-pool-id
NEXT_PUBLIC_COGNITO_IDENTITY_POOL_ID=us-east-1:example-identity-pool-id
COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_example
NEXT_PUBLIC_COGNITO_ISSUER=https://cognito-idp.us-east-1.amazonaws.com/us-east-1_example
COGNITO_DOMAIN=example-domain.auth.us-east-1.amazoncognito.com
NEXT_PUBLIC_COGNITO_DOMAIN=example-domain.auth.us-east-1.amazoncognito.com

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXT_PUBLIC_NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# DynamoDB Tables
APP_TABLE_NAME=nucleus-app-app-table
NEXT_PUBLIC_APP_TABLE_NAME=nucleus-app-app-table
AUDIT_TABLE_NAME=nucleus-app-audit-table
NEXT_PUBLIC_AUDIT_TABLE_NAME=nucleus-app-audit-table
DYNAMODB_USERS_TEAMS_TABLE=nucleus-app-web-ui-users-teams
DYNAMODB_CHECKPOINT_TABLE=nucleus-app-checkpoints-table
DYNAMODB_WRITES_TABLE=nucleus-app-checkpoint-writes-v2-table
DYNAMODB_AGENT_CONVERSATIONS_TABLE=nucleus-app-agent-conversations
CHECKPOINT_S3_BUCKET=nucleus-app-checkpoint-bucket

# IAM Roles (for STS/Lambda)
AWS_LAMBDA_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/example-role
NEXT_PUBLIC_AWS_LAMBDA_EXECUTION_ROLE_ARN=arn:aws:iam::123456789012:role/example-role
SCHEDULER_LAMBDA_ARN=arn:aws:lambda:us-east-1:123456789012:function:example-function

# Scheduler / EventBridge
EVENTBRIDGE_RULE_NAME=nucleus-app-rule

# Miscellaneous
DATA_DIR=/tmp
PORT=3000

# Agent Ops (background agent execution)
AGENT_OPS_TABLE_NAME=nucleus-app-agent-ops
AGENT_OPS_ENABLED=true
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Jira Integration
JIRA_WEBHOOK_SECRET=your-jira-webhook-secret
JIRA_BASE_URL=https://your-org.atlassian.net
JIRA_USER_EMAIL=bot@your-org.com
JIRA_API_TOKEN=your-atlassian-api-token

# DocumentDB / MongoDB (only needed for deep agent)
# MONGODB_URI=mongodb://localhost:27017
# MONGODB_DB_NAME=nucleus

# Langfuse Observability (LLM tracing for the AI agent)
# Set LANGFUSE_ENABLED=true to activate; all other vars are required when enabled.
# LANGFUSE_ENABLED=true
# LANGFUSE_PUBLIC_KEY=pk-lf-...
# LANGFUSE_SECRET_KEY=sk-lf-...
# LANGFUSE_HOST=https://cloud.langfuse.com   # omit for cloud, set for self-hosted